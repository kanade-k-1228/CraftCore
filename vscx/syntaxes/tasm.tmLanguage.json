{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TASM",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#assembly" },
    { "include": "#registers" },
    { "include": "#labels" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tasm",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tasm",
          "match": "\\b(if|else|while|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.tasm",
          "match": "\\b(fn|var|type|const|static|asm)\\b"
        },
        {
          "name": "keyword.type.primitive.tasm",
          "match": "\\b(int)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.tasm",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        },
        {
          "name": "storage.type.pointer.tasm",
          "match": "\\*"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tasm",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tasm",
              "match": "\\\\[\\\\\"nrt]"
            }
          ]
        },
        {
          "name": "string.quoted.single.tasm",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tasm",
              "match": "\\\\[\\\\']"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.tasm",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.tasm",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.tasm",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.bitwise.tasm",
          "match": "[&|^]|<<|>>"
        },
        {
          "name": "keyword.operator.comparison.tasm",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.tasm",
          "match": "!|&&|\\|\\|"
        },
        {
          "name": "keyword.operator.assignment.tasm",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.tasm",
          "match": "->"
        },
        {
          "name": "keyword.operator.address.tasm",
          "match": "@"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.tasm",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.function.tasm" },
            "2": { "name": "entity.name.function.tasm" }
          }
        },
        {
          "name": "entity.name.function.call.tasm",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.call.tasm" }
          }
        }
      ]
    },
    "assembly": {
      "patterns": [
        {
          "name": "entity.name.function.assembly.tasm",
          "match": "\\b(asm)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.declaration.assembly.tasm" },
            "2": { "name": "entity.name.function.assembly.tasm" }
          }
        },
        {
          "name": "support.function.assembly.instruction.tasm",
          "match": "\\b(nop|mov|add|addi|sub|subi|load|loadi|store|jump|jumpr|call|ret|not|and|andi|or|ori|xor|xori|eq|eqi|neq|neqi|lt|lti|lts|ltsi|gte|gtei|gtes|gtesi)\\b"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.language.register.tasm",
          "match": "\\b(z|zero|sp|ra|fp|a0|a1|t0|t1|t2|t3|s0|s1|s2|s3|pc)\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.label.tasm",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": { "name": "entity.name.label.tasm" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tasm",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.tasm"
}